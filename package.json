{
  "name": "style-converter",
  "version": "1.0.1",
  "description": "CLI tool to convert Tailwind/Bootstrap classes to CSS Modules with SCSS",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "style-convert": "bin/tailwind-convert.js"
  },
  "files": [
    "dist",
    "bin",
    "scripts/postinstall.js",
    "README.md"
  ],
  "keywords": [
    "tailwind",
    "bootstrap",
    "css-modules",
    "scss",
    "converter",
    "migration"
  ],
  "author": "Wajkie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wajkie/style-converter-cli.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:cli": "tsc --project tsconfig.cli.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "styleConvert": "tsx script/styleConvert.ts",
    "prepublishOnly": "npm run build:cli",
    "postinstall": "node scripts/postinstall.js || true"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@babel/generator": "^7.28.5",
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@eslint/js": "^9.39.1",
    "@types/babel__generator": "^7.27.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "glob": "^11.0.3",
    "globals": "^16.5.0",
    "sass-embedded": "^1.93.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "vite-plugin-raw": "^1.0.3"
  }
}
